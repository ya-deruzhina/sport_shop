{
    "/api/v1/order/": {
        "post": {
            "description": "Create Order",
            "tags": [
                "Shop"
            ],
            "requestBody": {
                "$ref": "#/components/requestBodies/OrderRequestBody"
            },
            "responses": {
                "200": {
                    "$ref": "#/components/responses/Order"
                },
                "400": {
                    "description": "Returned when request body is not valid",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "errors": {
                                        "type": "object",
                                        "example": {
                                            "errors": [
                                                "404"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "401": {
                    "description": "Returned after sending invalid set of credentials",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "errors": {
                                        "type": "object",
                                        "example": {
                                            "detail": [
                                                "Authentication credentials were not provided."
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }

            }
        },
        "get": {
            "description": "View Order after Create",
            "tags": [
                "Shop"
            ],
            "responses": {
                "200": {
                    "$ref": "#/components/responses/OrderAfterCreate"
                },
                "401": {
                    "description": "Returned after sending invalid set of credentials",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "errors": {
                                        "type": "object",
                                        "example": {
                                            "detail": [
                                                "Authentication credentials were not provided."
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }

            }
        }
    }
}