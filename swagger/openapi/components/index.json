{
  "responses": {
    "UnauthorizedResponse": {
      "description": "Returned after making request with invalid credentials",
      "content": {
        "application/json": {
          "schema": {
            "example": {
              "errors": {
                "detail": [
                  "Authentication credentials were not provided"
                ]
              }
            }
          }
        }
      }
    },
    "SuccessfulSignInResponse": {
      "description": "Successful sign in",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "description": "Successful authentication response body",
            "properties": {
              "user": {
                "$ref": "#components/schemas/User"
              },
              "token": {
                "$ref": "#components/schemas/Token"
              }
            }
          }
        }
      }
    },
    "OneProductCommon":{
      "description": "Page of one product",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "description": "Page of one product",
              "properties": {
                "information": {
                  "$ref": "#components/schemas/Products"
                },
                "system": {
                  "$ref": "#components/schemas/System"
                }             
              }
            }
          }
        }
      },
    "LeavedComment":{
      "description": "For leaving Comment",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "description": "For leaving Comment",
              "properties": {
                "information": {
                  "$ref": "#components/schemas/Comment"
                }            
              }
            }
          }
        }
      },
      "LeavedRating":{
        "description": "For leaving Rating",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "description": "For leaving Rating",
                "properties": {
                  "information": {
                    "$ref": "#components/schemas/Rating"
                  }            
                }
              }
            }
          }
        },
        "AddToBasketFromBasket":{
          "description": "Add To Basket From Basket",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Add To Basket From Basket",
                  "properties": {
                    "information": {
                      "$ref": "#components/schemas/BasketView"
                    }            
                  }
                }
              }
            }
          },
          "DeleteFromBasket":{
            "description": "Delete From Basket",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "description": "Delete From Basket",
                    "properties": {
                      "information": {
                        "$ref": "#components/schemas/BasketView"
                      }            
                    }
                  }
                }
              }
            },
            "AddToBasketFromPage":{
              "description": "Add To Basket From Page",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "description": "Add To Basket From Page",
                      "properties": {
                        "information": {
                          "$ref": "#components/schemas/BasketView"
                        }            
                      }
                    }
                  }
                }
              },
              "Basket":{
                "description": "Page of Basket",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "description": "Page of Basket",
                        "properties": {
                          "0": {
                            "$ref": "#components/schemas/Basket"
                          },
                          "system": {
                            "$ref": "#components/schemas/PriceAll"
                          }             
                        }
                      }
                    }
                  }
                }
    },
  "requestBodies": {
    "AuthRequestBody": {
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "identity": {
                "type": "string"
              },
              "password": {
                "type": "string"
              }
            }
          },
          "examples": {
            "test@user.com": {
              "summary": "An example of a user",
              "value": {
                "identity": "admin",
                "password": "admin"
              }
            }
          }
        }
      }
    },
    "CommentRequestBody": {
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "comment": {
                "type": "string"
              }
            }
          },
          "examples": {
            "product_1": {
              "summary": "An example of a comment",
              "value": {
                "comment": "comment"
              }
            }
          }
        }
      }
    },
    "RatingRequestBody": {
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "rating": {
                "type": "integer"
              }
            }
          },
          "examples": {
            "product_1": {
              "summary": "An example of a rating",
              "value": {
                "rating": 5
              }
            }
          }
        }
      }
    }

  },
  "schemas": {
    "Token": {
      "description": "Token model",
      "type": "object",
      "required": [
        "token"
      ],
      "properties": {
        "token": {
          "type": "string",
          "example": "Bearer <token>"
        }
      }
    },
    "User": {
      "description": "User model",
      "type": "object",
      "required": [
        "email",
        "status"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "example": "123"
        },
        "email": {
          "type": "string",
          "example": "test@user.com"
        },
        "first_name": {
          "type": "string",
          "example": "Jack"
        },
        "last_name": {
          "type": "string",
          "example": "London"
        },
        "status": {
          "type": "string",
          "example": "active"
        }
      }
    },
    
    "Products": {
      "description": "Products model",
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "example": "1"
        },
        "name": {
          "type": "string",
          "example": "weight"
        },
        "description": {
          "type": "string",
          "example": "10 kg"
        },
        "price": {
          "type": "float",
          "example": "10.50"
        },
        "id_parent": {
          "type": "integer",
          "example": "1"
        }
      }
    },

    "System": {
      "description": "User model",
      "type": "object",
      "required": [],
      "properties": {
        "comment": {
          "type": "string",
          "example": "No Comment"
        },
        "rating": {
          "type": "string",
          "example": "No Rating"
        }
      }
    },
    "Comment": {
      "description": "Comment model",
      "type": "object",
      "required": [],
      "properties": {
        "author": {
          "type": "integer",
          "example": "1"
        },
        "product": {
          "type": "integer",
          "example": "1"
        },
        "comment": {
          "type": "string",
          "example": "comment"
        }
      }
    },
    "Rating": {
      "description": "Rating model",
      "type": "object",
      "required": [],
      "properties": {
        "author": {
          "type": "integer",
          "example": "1"
        },
        "product": {
          "type": "integer",
          "example": "1"
        },
        "rating": {
          "type": "integer",
          "example": "5"
        }
      }
    },
    "BasketView": {
      "description": "Basket View",
      "type": "object",
      "required": [],
      "properties": {
        "id": {
          "type": "integer",
          "example": "1"
        },"user": {
          "type": "integer",
          "example": "1"
        },
        "product": {
          "type": "integer",
          "example": "1"
        },
        "count": {
          "type": "integer",
          "example": "2"
        }
      }
    },
    "Basket": {
      "description": "Basket",
      "type": "object",
      "required": [],
      "properties": {
        "product": {
          "type": "string",
          "example": "Test"
        },
        "count": {
          "type": "integer",
          "example": "1"
        },
        "price_one": {
          "type": "float",
          "example": "31.5"
        },
        "price": {
          "type": "float",
          "example": "31.5"
        },
        "id": {
          "type": "integer",
          "example": "1"
        }
      }
    },

    "PriceAll": {
      "description": "Price of Order",
      "type": "object",
      "required": [],
      "properties": {
        "all_price": {
          "type": "float",
          "example": "10.5"
        }
      }
    }
  },
  "securitySchemes": {
    "BearerScheme": {
      "type": "http",
      "description": "Enter your JWT token",
      "scheme": "bearer",
      "bearerFormat": "Bearer"
    }
  }
}